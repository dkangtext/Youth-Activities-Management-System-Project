<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Drop Shadows  -->
    <DropShadowEffect
        x:Key="StandardShadow"
        BlurRadius="10"
        Direction="270"
        Opacity="0.2"
        ShadowDepth="3"
        Color="#000000" />

    <DropShadowEffect
        x:Key="LightShadow"
        BlurRadius="5"
        Direction="270"
        Opacity="0.1"
        ShadowDepth="2"
        Color="#000000" />

    <DropShadowEffect
        x:Key="HoverShadow"
        BlurRadius="15"
        Direction="270"
        Opacity="0.3"
        ShadowDepth="5"
        Color="#000000" />
</ResourceDictionary>