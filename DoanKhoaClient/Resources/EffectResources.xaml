<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Drop Shadows -->
    <DropShadowEffect x:Key="StandardShadow"
                      BlurRadius="10"
                      ShadowDepth="3"
                      Opacity="0.2"
                      Direction="270"
                      Color="#000000"/>

    <DropShadowEffect x:Key="LightShadow"
                      BlurRadius="5"
                      ShadowDepth="2"
                      Opacity="0.1"
                      Direction="270"
                      Color="#000000"/>

    <DropShadowEffect x:Key="HoverShadow"
                      BlurRadius="15"
                      ShadowDepth="5"
                      Opacity="0.3"
                      Direction="270"
                      Color="#000000"/>
</ResourceDictionary>