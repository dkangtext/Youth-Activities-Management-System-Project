<Application
    x:Class="DoanKhoaClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:DoanKhoaClient"
    StartupUri="Views/ActivitiesView.xaml">
    <Application.Resources>
        <FontFamily x:Key="MontserratFont">pack://application:,,,/static/#Montserrat</FontFamily>
        
        <LinearGradientBrush x:Key="LightBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF6FCFF" Offset="0.596"/>
            <GradientStop Color="#FFDBF3FF" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="LightTextColor" Color="#042354"/>
        <SolidColorBrush x:Key="LightAccentColor" Color="#597CA2"/>

        <!-- Dark Theme -->
        <LinearGradientBrush x:Key="DarkBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#042354" Offset="0.67"/>
            <GradientStop Color="#597CA2" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="DarkTextColor" Color="#F6FCFF"/>
        <SolidColorBrush x:Key="DarkAccentColor" Color="#87ACCD"/>
    </Application.Resources>

</Application>
