<Window
    x:Class="DoanKhoaClient.Views.MembersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:vm="clr-namespace:DoanKhoaClient.ViewModels"
    Title="Thông tin thành viên"
    MinWidth="1024"
    MinHeight="768"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="NavigationButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <ContentPresenter />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuItemStyle" TargetType="{x:Type StackPanel}">
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1" />
                        <TranslateTransform />
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                To="1.05"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                To="1.05"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)"
                                To="3"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                To="1"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                To="1"
                                Duration="0:0:0.1" />
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.X)"
                                To="0"
                                Duration="0:0:0.1" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid x:Name="Members_Background">
            <Grid.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.596" Color="#FFF6FCFF" />
                    <GradientStop Offset="1" Color="#FFDBF3FF" />
                </LinearGradientBrush>
            </Grid.Background>
            <Grid Width="1440" Height="1024">
                <TextBox
                    x:Name="Activities_tbSearch"
                    Width="307"
                    Height="50"
                    Margin="370,41,0,0"
                    Padding="15,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Center"
                    Background="#FFDBF3FF"
                    BorderBrush="{x:Null}"
                    FontSize="17"
                    KeyDown="Activities_tbSearch_KeyDown"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                <Popup
                    IsOpen="{Binding IsSearchResultOpen, Mode=TwoWay}"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=Activities_tbSearch}"
                    StaysOpen="False">
                    <Border
                        Width="{Binding ElementName=Activities_tbSearch, Path=ActualWidth}"
                        Background="#FFEDF9FF"
                        BorderThickness="1"
                        CornerRadius="5">
                        <ListBox
                            MaxHeight="200"
                            Background="White"
                            BorderThickness="0"
                            ItemsSource="{Binding FilteredActivities}"
                            ScrollViewer.VerticalScrollBarVisibility="Auto">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Height="44"
                                        MinWidth="220"
                                        Margin="0,4,0,4"
                                        Padding="10"
                                        HorizontalContentAlignment="Left"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Content="{Binding Title}"
                                        FontSize="13"
                                        FontWeight="Bold"
                                        Foreground="#12305E" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>
                </Popup>
                <ToggleButton
                    x:Name="FilterDropdownButton"
                    Margin="687,41,706,932"
                    Background="#FFDBF3FF"
                    BorderBrush="{x:Null}"
                    Checked="FilterDropdownButton_Checked"
                    Unchecked="FilterDropdownButton_Unchecked">
                    <Image
                        Width="33"
                        Height="33"
                        OpacityMask="#FF597CA2"
                        Source="/Views/Images/filter.png" />
                </ToggleButton>
                <WrapPanel
                    Width="493"
                    Height="74"
                    Margin="743,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Popup
                        IsOpen="{Binding IsFilterDropdownOpen, Mode=TwoWay}"
                        Placement="Bottom"
                        PlacementTarget="{Binding ElementName=FilterDropdownButton}"
                        StaysOpen="False">
                        <Popup.Resources>
                            <Storyboard x:Key="PopupFadeIn">
                                <DoubleAnimation
                                    Storyboard.TargetProperty="Opacity"
                                    From="0"
                                    To="1"
                                    Duration="0:0:0.2" />
                            </Storyboard>
                        </Popup.Resources>
                        <Border
                            Padding="16"
                            Background="#E6F0FA"
                            BorderBrush="#CCC"
                            BorderThickness="1"
                            Loaded="FilterPopupBorder_Loaded">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,8"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Text="Bộ lọc" />
                                <TextBlock
                                    Margin="0,8,0,4"
                                    FontWeight="Bold"
                                    Text="Loại hoạt động" />
                                <ItemsControl ItemsSource="{Binding ActivityTypeOptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Display}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Separator Margin="0,8" />
                                <TextBlock
                                    Margin="0,8,0,4"
                                    FontWeight="Bold"
                                    Text="Trạng thái" />
                                <ItemsControl ItemsSource="{Binding ActivityStatusOptions}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding Display}" IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <Button
                                    Margin="0,12,0,0"
                                    Command="{Binding ApplyFilterCommand}"
                                    Content="Lọc" />
                            </StackPanel>
                        </Border>
                    </Popup>
                </WrapPanel>
                <Image
