<Window
    x:Class="DoanKhoaClient.Views.AdminActivitiesPostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Admin_Light_ActivitiesPostView"
    Title="Chi tiết hoạt động"
    Width="1440"
    Height="1036"
    mc:Ignorable="d">
    <Grid x:Name="Admin_ActivitiesPost_Background">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.596" Color="#FFF6FCFF" />
                <GradientStop Offset="1" Color="#FFDBF3FF" />
            </LinearGradientBrush>
        </Grid.Background>

        <!--  Định nghĩa ColumnDefinitions để chia đều màn hình  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <!--  Sidebar  -->
            <ColumnDefinition Width="*" />
            <!--  Main content  -->
        </Grid.ColumnDefinitions>

        <!--  Sidebar - đặt trong Grid.Column="0"  -->
        <Border
            x:Name="Admin_ActivitiesPost_Dashboard"
            Grid.Column="0"
            Width="288"
            Height="942"
            Margin="43,0,20,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="Black"
            CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.04" Color="#FFF6FCFF" />
                    <GradientStop Offset="0.46" Color="#FFDBF3FF" />
                    <GradientStop Offset="0.937" Color="#FF87ACCD" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!--  Logo và Menu Items trong Sidebar  -->
        <Image
            x:Name="HomePage_iLogo"
            Grid.Column="0"
            Width="112.38"
            Height="40"
            Margin="131,71,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/header.png" />
        <Image
            x:Name="HomePage_iHome"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="102,203,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/home.png" />
        <Image
            x:Name="HomePage_iChat"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="102,279,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/chat_bubble.png" />
        <Image
            x:Name="HomePage_iActivities"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="102,354,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/active-activities.png" />
        <Image
            x:Name="HomePage_Task_iMembers"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="102,432,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/members.png" />
        <Image
            x:Name="HomePage_iTasks"
            Grid.Column="0"
            Width="30"
            Height="30"
            Margin="102,510,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/tasks.png" />
        <Label
            x:Name="HomePage_lbHome"
            Grid.Column="0"
            Width="108"
            Height="30"
            Margin="165,203,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Home"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="HomePage_lbChat"
            Grid.Column="0"
            Width="108"
            Height="30"
            Margin="165,279,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Chat"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="HomePage_lbActivities"
            Grid.Column="0"
            Width="108"
            Height="30"
            Margin="165,354,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Activities"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#597CA2" />
        <Label
            x:Name="HomePage_lbMembers"
            Grid.Column="0"
            Width="108"
            Height="30"
            Margin="165,432,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Members"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="HomePage_lbTasks"
            Grid.Column="0"
            Width="108"
            Height="30"
            Margin="165,510,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Tasks"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold"
            RenderTransformOrigin="0.527,3.278" />
        <Image
            x:Name="HomePage_iFacebook"
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="175,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/facebook.png" />
        <Image
            x:Name="HomePage_iInstagram"
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="135,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/instagram.png" />
        <Image
            x:Name="HomePage_iYoutube"
            Grid.Column="0"
            Width="24"
            Height="24"
            Margin="215,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/youtube.png" />

        <!--  Main Content Area - Grid.Column="1"  -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!--  Header with search and controls  -->
                <RowDefinition Height="Auto" />
                <!--  Back button  -->
                <RowDefinition Height="*" />
                <!--  Content area  -->
            </Grid.RowDefinitions>

            <!--  Header row with search and controls  -->
            <Grid Grid.Row="0">
                <TextBox
                    x:Name="Admin_ActivitiesPost_tbSearch"
                    Width="307"
                    Height="50"
                    Margin="30,41,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="#FFDBF3FF"
                    BorderBrush="{x:Null}"
                    Text=""
                    TextWrapping="Wrap" />
                <Image
                    x:Name="HomePage_iSearch"
                    Width="40"
                    Height="40"
                    Margin="288,46,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Source="/Views/Images/search.png" />

                <!--  Controls - Right aligned  -->
                <StackPanel
                    Margin="0,46,20,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Image
                        x:Name="ThemeToggleButton"
                        Width="40"
                        Height="40"
                        Margin="0,0,20,0"
                        MouseDown="ThemeToggleButton_MouseDown"
                        Source="/Views/Images/dark.png" />
                    <Image
                        x:Name="HomePage_iNotifications"
                        Width="40"
                        Height="40"
                        Margin="0,0,20,0"
                        Source="/Views/Images/light-notifications.png" />
                    <Image
                        x:Name="HomePage_iUsers"
                        Width="40"
                        Height="40"
                        Source="/Views/Images/generic avatar.png" />
                </StackPanel>
            </Grid>

            <!--  Back button row  -->
            <Button
                x:Name="BackButton"
                Grid.Row="1"
                Width="120"
                Height="40"
                Margin="30,20,0,10"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#597CA2"
                BorderThickness="0"
                Click="BackButton_Click"
                Content="Quay lại"
                FontWeight="Bold"
                Foreground="White">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>

            <!--  Content area with post details  -->
            <Border
                Grid.Row="2"
                Margin="30,0,30,30"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FFDBF3FF"
                BorderBrush="{x:Null}"
                CornerRadius="10">

                <!--  ScrollViewer để cuộn nội dung  -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <!--  Tiêu đề bài đăng  -->
                        <TextBlock
                            x:Name="ActivityTitle"
                            Margin="100,30,100,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="24"
                            FontWeight="Bold"
                            Foreground="#12305E"
                            Text="Chiến dịch Ngọn Đuốc Xanh 2025 thông báo mở form đăng ký chiến sĩ"
                            TextAlignment="Center"
                            TextWrapping="Wrap" />

                        <!--  Ngày đăng  -->
                        <TextBlock
                            x:Name="ActivityDate"
                            Margin="0,100,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            FontSize="14"
                            Foreground="#6c757d"
                            Text="Thứ Sáu - 14/02/2025" />

                        <!--  Ảnh minh họa - Đã tăng kích thước  -->
                        <Border
                            Width="700"
                            Height="400"
                            Margin="0,137,0,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            CornerRadius="8">
                            <Image
                                x:Name="ActivityImage"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Stretch="Uniform"
                                StretchDirection="Both" />
                        </Border>

                        <!--  Nút Chỉnh sửa  -->

                        <!--  Nội dung bài viết  -->
                        <TextBlock
                            Margin="50,550,50,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="#12305E"
                            Text="THÔNG TIN CHI TIẾT" />

                        <TextBlock
                            x:Name="ActivityContent"
                            Margin="50,580,50,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            FontSize="14"
                            LineHeight="24"
                            Text="Như câu nói &quot;Sống là cho đâu chỉ nhận riêng mình.&quot; của Tố Hữu, cho đi không phải là sự mất mát, mà là một cách để lan tỏa yêu thương và nghĩa trong cuộc sống. Một nụ cười, một bàn tay giúp đỡ hay một hành động nhỏ bé cũng có thể mang lại niềm vui và hy vọng cho những mảnh đời kém may mắn. Ngọn Đuốc Xanh chính là cơ hội để mỗi chúng ta viết tiếp câu chuyện của lòng nhân ái, cùng nhau lan tỏa ánh sáng của sự sẻ chia và tinh thần tình nguyện đến khắp mọi nơi."
                            TextWrapping="Wrap" />

                        <!--  Thông tin bổ sung: Loại hoạt động và Trạng thái  -->
                        <Grid Margin="50,700,50,0" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,0,10,10"
                                FontWeight="SemiBold"
                                Text="Loại hoạt động:" />
                            <TextBlock
                                x:Name="ActivityTypeText"
                                Grid.Row="0"
                                Grid.Column="1"
                                Foreground="#597CA2"
                                Text="Tình nguyện" />

                            <TextBlock
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="0,0,10,10"
                                FontWeight="SemiBold"
                                Text="Trạng thái:" />
                            <TextBlock
                                x:Name="ActivityStatusText"
                                Grid.Row="1"
                                Grid.Column="1"
                                Foreground="#597CA2"
                                Text="Sắp diễn ra" />
                        </Grid>

                        <!--  Separator  -->
                        <Rectangle
                            Height="1"
                            Margin="20,750,20,0"
                            VerticalAlignment="Top"
                            Fill="#FF042354" />

                        <!--  Like section  -->
                        <Grid Margin="50,770,50,0" VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <Button
                                    Padding="15,5"
                                    Background="#FF042354"
                                    BorderThickness="0"
                                    Content="Thích"
                                    FontWeight="Bold"
                                    Foreground="White">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="5" />
                                        </Style>
                                    </Button.Resources>
                                </Button>
                                <TextBlock
                                    Margin="10,0,0,0"
                                    VerticalAlignment="Center"
                                    FontWeight="SemiBold"
                                    Foreground="#FF042354"
                                    Text="42" />
                            </StackPanel>

                            <!--  Bình luận  -->
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                FontWeight="SemiBold"
                                Text="1 Bình luận" />
                        </Grid>

                        <!--  Comment section  -->
                        <StackPanel Margin="50,820,50,50" VerticalAlignment="Top">
                            <!--  Comment 1  -->
                            <Grid Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Avatar  -->
                                <Border
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Background="#E6E6E6"
                                    CornerRadius="20" />

                                <!--  Comment content  -->
                                <Border
                                    Grid.Column="1"
                                    Margin="10,0,00,0"
                                    Padding="15,10"
                                    Background="#EAF6FF"
                                    CornerRadius="8">
                                    <StackPanel>
                                        <TextBlock
                                            Margin="0,0,0,5"
                                            FontWeight="SemiBold"
                                            Foreground="#FF042354"
                                            Text="Đỗ Quang Trung" />
                                        <TextBlock Margin="0,0,0,5" Text="Cmt đầu" />
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock
                                                Cursor="Hand"
                                                Foreground="#0E4C92"
                                                Text="Thích" />
                                            <TextBlock
                                                Margin="15,0,0,0"
                                                Cursor="Hand"
                                                Foreground="#0E4C92"
                                                Text="Phản hồi" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>

                                <!--  Options  -->
                                <StackPanel
                                    Grid.Column="2"
                                    Margin="10,0,0,0"
                                    Orientation="Horizontal">
                                    <TextBlock
                                        VerticalAlignment="Top"
                                        Cursor="Hand"
                                        FontSize="20"
                                        FontWeight="Bold"
                                        Text="..." />

                                    <!--  Dropdown menu  -->
                                    <Border
                                        Margin="15,0,0,0"
                                        Padding="10,5"
                                        Background="#EAF6FF"
                                        CornerRadius="8"
                                        Visibility="Collapsed">
                                        <StackPanel>
                                            <TextBlock Margin="0,0,0,5" Text="Xoá" />
                                            <TextBlock Margin="0,0,0,5" Text="Ẩn bình luận" />
                                            <TextBlock Text="Báo cáo" />
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>

                            <!--  Comment input  -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--  Avatar  -->
                                <Border
                                    Grid.Column="0"
                                    Width="40"
                                    Height="40"
                                    Background="#E6E6E6"
                                    CornerRadius="20" />

                                <!--  Input field  -->
                                <Border
                                    Grid.Column="1"
                                    Margin="10,0,0,0"
                                    Padding="15,10"
                                    Background="#EAF6FF"
                                    CornerRadius="8">
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Foreground="#6c757d"
                                        Text="Bình luận dưới tên..." />
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Window>