<Window x:Name="Admin_Light_TasksView"
        x:Class="DoanKhoaClient.Views.AdminTasksView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DoanKhoaClient.Views"
        mc:Ignorable="d"
        Title="AdminTasksView"
        Height="1036"
        Width="1440">
       <Grid x:Name="Admin_Task_Background"
             Width="1440"
             Height="1022.8">
              <Grid.Background>
                     <LinearGradientBrush EndPoint="0.5,1"
                                          StartPoint="0.5,0">
                            <GradientStop Color="#FFF6FCFF"
                                          Offset="0.596"/>
                            <GradientStop Color="#FFDBF3FF"
                                          Offset="1"/>
                     </LinearGradientBrush>
              </Grid.Background>
              <TextBox x:Name="Admin_Task_tbSearch"
                       HorizontalAlignment="Left"
                       Margin="370,41,0,0"
                       TextWrapping="Wrap"
                       Text=""
                       VerticalAlignment="Top"
                       Width="307"
                       Height="50"
                       Background="#FFDBF3FF"
                       BorderBrush="{x:Null}"/>
              <Border x:Name="Admin_Task_Dashboard"
                      BorderBrush="Black"
                      HorizontalAlignment="Left"
                      Height="942"
                      Margin="43,0,0,0"
                      VerticalAlignment="Center"
                      Width="288"
                      CornerRadius="10,10,10,10">
                     <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1"
                                                 StartPoint="0.5,0">
                                   <GradientStop Color="#FFF6FCFF"
                                                 Offset="0.04"/>
                                   <GradientStop Color="#FFDBF3FF"
                                                 Offset="0.46"/>
                                   <GradientStop Color="#FF87ACCD"
                                                 Offset="0.937"/>
                            </LinearGradientBrush>
                     </Border.Background>
              </Border>
              <Image x:Name="Admin_Task_iUsers"
                     Grid.Column="1"
                     HorizontalAlignment="Left"
                     Height="40"
                     Margin="1358,46,0,0"
                     VerticalAlignment="Top"
                     Width="40"
                     Source="/Views/Images/generic avatar.png"/>
              <Image x:Name="Admin_Task_iNotifications"
                     HorizontalAlignment="Left"
                     Height="40"
                     Margin="1297,46,0,0"
                     VerticalAlignment="Top"
                     Width="40"
                     Source="/Views/Images/light-notifications.png"/>
              <Image x:Name="ThemeToggleButton"
                     HorizontalAlignment="Left"
                     Height="40"
                     Margin="1236,46,0,0"
                     VerticalAlignment="Top"
                     Width="40"
                     Source="/Views/Images/dark.png"
                     MouseDown="ThemeToggleButton_MouseDown"/>
              <Image x:Name="Admin_Task_iSearch"
                     HorizontalAlignment="Left"
                     Height="40"
                     Margin="628,46,0,0"
                     VerticalAlignment="Top"
                     Width="40"
                     Source="/Views/Images/search.png"/>
              <Image x:Name="Admin_Task_iLogo"
                     HorizontalAlignment="Left"
                     Height="40"
                     Margin="131,71,0,0"
                     VerticalAlignment="Top"
                     Width="112.38"
                     Source="/Views/Images/header.png"/>
              <Label x:Name="Admin_Task_lbHome"
                     Content="Home"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="165,203,0,0"
                     VerticalAlignment="Top"
                     Width="108"
                     FontFamily="Segoe UI"
                     FontSize="20"
                     FontWeight="Bold"
                     Padding="0,0,0,0"
                     MouseLeftButtonDown="Home_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết biểu tượng Home với Command -->
              <Image x:Name="Admin_Task_iHome"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="102,203,0,0"
                     VerticalAlignment="Top"
                     Width="30"
                     Source="/Views/Images/home.png"
                     MouseLeftButtonDown="Home_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết nhãn Chat với Command -->
              <Label x:Name="Admin_Task_lbChat"
                     Content="Chat"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="165,279,0,0"
                     VerticalAlignment="Top"
                     Width="108"
                     FontFamily="Segoe UI"
                     FontSize="20"
                     FontWeight="Bold"
                     Padding="0,0,0,0"
                     MouseLeftButtonDown="Chat_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết biểu tượng Chat với Command -->
              <Image x:Name="Admin_Task_iChat"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="102,279,0,0"
                     VerticalAlignment="Top"
                     Width="30"
                     Source="/Views/Images/chat_bubble.png"
                     MouseLeftButtonDown="Chat_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết nhãn Activities với Command -->
              <Label x:Name="Admin_Task_lbActivities"
                     Content="Activities"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="165,354,0,0"
                     VerticalAlignment="Top"
                     Width="108"
                     FontFamily="Segoe UI"
                     FontSize="20"
                     FontWeight="Bold"
                     Padding="0,0,0,0"
                     MouseLeftButtonDown="Activities_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết biểu tượng Activities với Command -->
              <Image x:Name="Admin_Task_iActivities"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="102,354,0,0"
                     VerticalAlignment="Top"
                     Width="30"
                     Source="/Views/Images/activities.png"
                     MouseLeftButtonDown="Activities_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết nhãn Members với Command -->
              <Label x:Name="Admin_Task_lbMembers"
                     Content="Members"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="165,432,0,0"
                     VerticalAlignment="Top"
                     Width="108"
                     FontFamily="Segoe UI"
                     FontSize="20"
                     FontWeight="Bold"
                     Padding="0,0,0,0"
                     MouseLeftButtonDown="Members_MouseLeftButtonDown"
                     Cursor="Hand"/>

              <!-- Liên kết biểu tượng Members với Command -->
              <Image x:Name="Admin_Task_iMembers"
                     HorizontalAlignment="Left"
                     Height="30"
                     Margin="102,432,0,0"
                     VerticalAlignment="Top"
                     Width="30"
                     Source="/Views/Images/members.png"
                     MouseLeftButtonDown="Members_MouseLeftButtonDown"
                     Cursor="Hand"/>
              <Image x:Name="Admin_Task_iFacebook"
                     HorizontalAlignment="Left"
                     Height="24"
                     Margin="175,926,0,0"
                     VerticalAlignment="Top"
                     Width="24"
                     Source="/Views/Images/facebook.png"/>
              <Image x:Name="Admin_Task_iInstagram"
                     HorizontalAlignment="Left"
                     Height="24"
                     Margin="135,926,0,0"
                     VerticalAlignment="Top"
                     Width="24"
                     Source="/Views/Images/instagram.png"/>
              <Image x:Name="Admin_Task_iYoutube"
                     HorizontalAlignment="Left"
                     Height="24"
                     Margin="215,926,0,0"
                     VerticalAlignment="Top"
                     Width="24"
                     Source="/Views/Images/youtube.png"/>
              <Label x:Name="Admin_Task_lbInformationTasks"
                     Content="THÔNG TIN CÔNG VIỆC"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left"
                     Height="40"
                     Margin="365,153,0,0"
                     VerticalAlignment="Top"
                     Width="386"
                     FontSize="32"
                     Foreground="#042354"
                     FontWeight="Bold"
                     Padding="0,0,0,0"/>
              <Rectangle HorizontalAlignment="Left"
                         Height="1"
                         Margin="365,293,0,0"
                         Stroke="Black"
                         VerticalAlignment="Top"
                         Width="1020"
                         RenderTransformOrigin="0.5,0.5">
                     <Rectangle.RenderTransform>
                            <TransformGroup>
                                   <ScaleTransform ScaleY="-1"/>
                                   <SkewTransform/>
                                   <RotateTransform/>
                                   <TranslateTransform/>
                            </TransformGroup>
                     </Rectangle.RenderTransform>
              </Rectangle>
              <Button x:Name="CreateSessionButton"
                      Command="{Binding CreateSessionCommand}"
                      Content="Tạo mới"
                      Click="CreateSessionButton_Click"
                      HorizontalAlignment="Left"
                      Height="40"
                      Margin="365,219,0,0"
                      VerticalAlignment="Top"
                      Width="147"
                      Background="#FF042354"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#F6FCFF"/>

              <Button x:Name="EditSessionButton"
                      Command="{Binding EditSessionCommand}"
                      CommandParameter="{Binding SelectedSession}"
                      Content="Chỉnh sửa"
                      Click="EditSessionButton_Click"
                      IsEnabled="{Binding SelectedSession, Converter={StaticResource NullToBooleanConverter}}"
                      HorizontalAlignment="Left"
                      Height="40"
                      Margin="534,219,0,0"
                      VerticalAlignment="Top"
                      Width="147"
                      Background="#FF042354"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#F6FCFF"/>

              <!-- filepath: d:\PROJECT\NT106.P22.ANTT_Team4\DoanKhoaClient\Views\AdminTasksView.xaml -->
              <ListView x:Name="SessionsListView"
                        ItemsSource="{Binding Sessions}"
                        SelectedItem="{Binding SelectedSession}"
                        SelectionChanged="SessionsListView_SelectionChanged"
                        MouseDoubleClick="SessionsListView_MouseDoubleClick"
                        Margin="370,330,55,41"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                     <ListView.View>
                            <GridView>
                                   <GridViewColumn Header="Tên phiên làm việc"
                                                   Width="300">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                                   <GridViewColumn Header="Người quản lý"
                                                   Width="200">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding ManagerName}"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                                   <GridViewColumn Header="Ngày tạo"
                                                   Width="150">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding CreatedAt, StringFormat=dd/MM/yyyy HH:mm}"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                            </GridView>
                     </ListView.View>
                     <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                   <Setter Property="HorizontalContentAlignment"
                                           Value="Stretch"/>
                                   <Setter Property="Padding"
                                           Value="8,6"/>
                                   <Style.Triggers>
                                          <Trigger Property="IsSelected"
                                                   Value="True">
                                                 <Setter Property="Background"
                                                         Value="#E3F2FD"/>
                                          </Trigger>
                                   </Style.Triggers>
                            </Style>
                     </ListView.ItemContainerStyle>
                     <ListView.ToolTip>
                            <ToolTip>
                                   <TextBlock Text="Nhấp đúp để xem chi tiết phiên làm việc"/>
                            </ToolTip>
                     </ListView.ToolTip>
              </ListView>
       </Grid>
</Window>
