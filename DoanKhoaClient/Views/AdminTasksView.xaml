                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#F6FCFF"/>

              <Button x:Name="EditSessionButton"
                      Command="{Binding EditSessionCommand}"
                      CommandParameter="{Binding SelectedSession}"
                      Content="Chỉnh sửa"
                      Click="EditSessionButton_Click"
                      IsEnabled="{Binding SelectedSession, Converter={StaticResource NullToBooleanConverter}}"
                      HorizontalAlignment="Left"
                      Height="40"
                      Margin="534,219,0,0"
                      VerticalAlignment="Top"
                      Width="147"
                      Background="#FF042354"
                      FontSize="16"
                      FontWeight="Bold"
                      Foreground="#F6FCFF"/>

              <!-- filepath: d:\PROJECT\NT106.P22.ANTT_Team4\DoanKhoaClient\Views\AdminTasksView.xaml -->
              <ListView x:Name="SessionsListView"
                        ItemsSource="{Binding Sessions}"
                        SelectedItem="{Binding SelectedSession}"
                        SelectionChanged="SessionsListView_SelectionChanged"
                        MouseDoubleClick="SessionsListView_MouseDoubleClick"
                        Margin="370,330,55,41"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0">
                     <ListView.View>
                            <GridView>
                                   <GridViewColumn Header="Tên phiên làm việc"
                                                   Width="300">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="SemiBold"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                                   <GridViewColumn Header="Loại"
                                                   Width="120">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock>
                                                               <TextBlock.Text>
                                                                      <Binding Path="Type">
                                                                             <Binding.Converter>
                                                                                    <local:TaskSessionTypeToStringConverter/>
                                                                             </Binding.Converter>
                                                                      </Binding>
                                                               </TextBlock.Text>
                                                        </TextBlock>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                                   <GridViewColumn Header="Người quản lý"
                                                   Width="200">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding ManagerName}"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                                   <GridViewColumn Header="Ngày tạo"
                                                   Width="150">
                                          <GridViewColumn.CellTemplate>
                                                 <DataTemplate>
                                                        <TextBlock Text="{Binding CreatedAt, StringFormat=dd/MM/yyyy HH:mm}"/>
                                                 </DataTemplate>
                                          </GridViewColumn.CellTemplate>
                                   </GridViewColumn>
                            </GridView>
                     </ListView.View>
                     <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                   <Setter Property="HorizontalContentAlignment"
                                           Value="Stretch"/>
                                   <Setter Property="Padding"
                                           Value="8,6"/>
                                   <Style.Triggers>
                                          <Trigger Property="IsSelected"
                                                   Value="True">
                                                 <Setter Property="Background"
                                                         Value="#E3F2FD"/>
                                          </Trigger>
                                   </Style.Triggers>
                            </Style>
                     </ListView.ItemContainerStyle>
                     <ListView.ToolTip>
                            <ToolTip>
                                   <TextBlock Text="Nhấp đúp để xem chi tiết phiên làm việc"/>
                            </ToolTip>
                     </ListView.ToolTip>
              </ListView>

