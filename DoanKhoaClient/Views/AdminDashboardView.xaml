<Window
    x:Class="DoanKhoaClient.Views.AdminDashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    Title="Dashboard Admin"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    MinWidth="1024"
    MinHeight="768"
    mc:Ignorable="d">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="NavButtonStyle"
                TargetType="Button">
            <Setter Property="Background"
                    Value="#FF042354"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontSize"
                    Value="16"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
            <Setter Property="Margin"
                    Value="0,10,0,0"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#FF0F3681"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="Admin_Dashboard_Background">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0"
                    EndPoint="0.5,1">
                <GradientStop Offset="0.67"
                        Color="#FFF6FCFF"/>
                <GradientStop Offset="1"
                        Color="#FFDBF3FF"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Wrap content in a Viewbox for responsive design -->
        <Viewbox Stretch="Uniform"
                 MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                 MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
            <Grid Width="1440"
                    Height="1024">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Navigation Panel -->
                <Border Background="#FFFFFFFF"
                        BorderBrush="#FFCBCDD2"
                        BorderThickness="0,0,1,0"
                        Margin="20,20,0,20"
                        CornerRadius="15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Admin Logo -->
                        <StackPanel Grid.Row="0"
                                Margin="20,30,20,20"
                                HorizontalAlignment="Center">
                            <TextBlock Text="Dashboard Admin"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Foreground="#FF042354"
                                       HorizontalAlignment="Center"/>
                            <TextBlock x:Name="AdminNameText"
                                       Text="Xin chào, Admin"
                                       FontSize="16"
                                       Foreground="#FF042354"
                                       Margin="0,5,0,0"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>

                        <!-- Navigation Menu -->
                        <StackPanel Grid.Row="1"
                                Margin="20,20,20,20">
                            <Button Content="Quản lý Tác vụ"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="TasksButton_Click"/>
                            <Button Content="Quản lý Hoạt động"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="ActivitiesButton_Click"/>
                            <Button Content="Chat"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="ChatButton_Click"/>
                            <Button Content="Quản lý Thành viên"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="MembersButton_Click"/>
                            <Button Content="Cài đặt"
                                    Style="{StaticResource NavButtonStyle}"
                                    Click="SettingsButton_Click"/>
                        </StackPanel>

                        <!-- Logout Button -->
                        <Button Grid.Row="3"
                                Content="Đăng xuất"
                                Style="{StaticResource NavButtonStyle}"
                                Background="#FFE53935"
                                Margin="20,10,20,30"
                                Click="LogoutButton_Click"/>
                    </Grid>
                </Border>

                <!-- Main Content Area -->
                <Grid Grid.Column="1"
                        Margin="20">
                    <TextBlock Text="Chào mừng đến với Trang Quản trị"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
            </Grid>
        </Viewbox>
    </Grid>
</Window>