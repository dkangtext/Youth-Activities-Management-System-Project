<Window
    x:Class="DoanKhoaClient.Views.AdminLightActivitiesPostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Admin_Light_ActivitiesPostView"
    Title="AdminLightActivitiesPostView"
    Width="1440"
    Height="1036"
    mc:Ignorable="d">
    <Grid
        x:Name="Admin_LightActivitiesPost_Background"
        Width="1440"
        Height="1022.8">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.596" Color="#FFF6FCFF" />
                <GradientStop Offset="1" Color="#FFDBF3FF" />
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox
            x:Name="Admin_LightActivitiesPost_tbSearch"
            Width="307"
            Height="50"
            Margin="370,41,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            Text=""
            TextWrapping="Wrap" />
        <Border
            x:Name="Admin_LightActivitiesPost_Dashboard"
            Width="288"
            Height="942"
            Margin="43,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            BorderBrush="Black"
            CornerRadius="10,10,10,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Offset="0.04" Color="#FFF6FCFF" />
                    <GradientStop Offset="0.46" Color="#FFDBF3FF" />
                    <GradientStop Offset="0.937" Color="#FF87ACCD" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>
        <Image
            x:Name="LightHomePage_iUsers"
            Grid.Column="1"
            Width="40"
            Height="40"
            Margin="1358,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/generic avatar.png" />
        <Image
            x:Name="LightHomePage_iNotifications"
            Width="40"
            Height="40"
            Margin="1297,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/light-notifications.png" />
        <Image
            x:Name="LightHomePage_iDark"
            Width="40"
            Height="40"
            Margin="1236,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/dark.png" />
        <Image
            x:Name="LightHomePage_iSearch"
            Width="40"
            Height="40"
            Margin="628,46,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/search.png" />
        <Image
            x:Name="LightHomePage_iLogo"
            Width="112.38"
            Height="40"
            Margin="131,71,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/header.png" />
        <Image
            x:Name="LightHomePage_iHome"
            Width="30"
            Height="30"
            Margin="102,203,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/home.png" />
        <Image
            x:Name="LightHomePage_iChat"
            Width="30"
            Height="30"
            Margin="102,279,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/chat_bubble.png" />
        <Image
            x:Name="LightHomePage_iActivities"
            Width="30"
            Height="30"
            Margin="102,354,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/active-activities.png" />
        <Image
            x:Name="LightHomePage_Task_iMembers"
            Width="30"
            Height="30"
            Margin="102,432,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/members.png" />
        <Image
            x:Name="LightHomePage_iTasks"
            Width="30"
            Height="30"
            Margin="102,510,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/tasks.png" />
        <Label
            x:Name="LightHomePage_lbHome"
            Width="108"
            Height="30"
            Margin="165,203,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Home"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="LightHomePage_lbChat"
            Width="108"
            Height="30"
            Margin="165,279,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Chat"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="LightHomePage_lbActivities"
            Width="108"
            Height="30"
            Margin="165,354,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Activities"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold"
            Foreground="#597CA2" />
        <Label
            x:Name="LightHomePage_lbMembers"
            Width="108"
            Height="30"
            Margin="165,432,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Members"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold" />
        <Label
            x:Name="LightHomePage_lbTasks"
            Width="108"
            Height="30"
            Margin="165,510,0,0"
            Padding="0,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Tasks"
            FontFamily="Segoe UI"
            FontSize="20"
            FontWeight="Bold"
            RenderTransformOrigin="0.527,3.278" />
        <Image
            x:Name="LightHomePage_iFacebook"
            Width="24"
            Height="24"
            Margin="175,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/facebook.png" />
        <Image
            x:Name="LightHomePage_iInstagram"
            Width="24"
            Height="24"
            Margin="135,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/instagram.png" />
        <Image
            x:Name="LightHomePage_iYoutube"
            Width="24"
            Height="24"
            Margin="215,926,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Source="/Views/Images/youtube.png" />

        <!--  Nội dung bài đăng (Phần mới thêm)  -->
        <Border
            Width="1028"
            Height="850"
            Margin="370,125,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FFDBF3FF"
            BorderBrush="{x:Null}"
            CornerRadius="10">
            <Grid>
                <!--  Tiêu đề bài đăng  -->
                <TextBlock
                    Width="644"
                    Margin="0,30,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="#12305E"
                    Text="Chiến dịch Ngọn Đuốc Xanh 2025 thông báo mở form đăng ký chiến sĩ"
                    TextAlignment="Center"
                    TextWrapping="Wrap" />

                <!--  Ngày đăng  -->
                <TextBlock
                    Margin="20,100,20,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    FontSize="14"
                    Foreground="#6c757d"
                    Text="Thứ Sáu - 14/02/2025" />

                <!--  Ảnh minh họa  -->
                <Border
                    Width="500"
                    Height="256"
                    Margin="0,137,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Background="#E6E6E6"
                    CornerRadius="8" />

                <!--  Nút Chỉnh sửa  -->
                <Button
                    Margin="0,30,20,0"
                    Padding="15,8"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Background="#FF042354"
                    BorderThickness="0"
                    Content="Chỉnh sửa"
                    FontWeight="Bold"
                    Foreground="White">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5" />
                        </Style>
                    </Button.Resources>
                </Button>

                <!--  Nội dung bài viết  -->
                <TextBlock
                    Margin="50,420,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#12305E"
                    Text="NGỌN ĐUỐC XANH 2025 | CHÍNH THỨC MỞ FORM TUYỂN CHIẾN SĨ" />

                <TextBlock
                    Margin="50,450,50,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontSize="14"
                    LineHeight="24"
                    Text="Như câu nói &quot;Sống là cho đâu chỉ nhận riêng mình.&quot; của Tố Hữu, cho đi không phải là sự mất mát, mà là một cách để lan tỏa yêu thương và nghĩa trong cuộc sống. Một nụ cười, một bàn tay giúp đỡ hay một hành động nhỏ bé cũng có thể mang lại niềm vui và hy vọng cho những mảnh đời kém may mắn. Ngọn Đuốc Xanh chính là cơ hội để mỗi chúng ta viết tiếp câu chuyện của lòng nhân ái, cùng nhau lan tỏa ánh sáng của sự sẻ chia và tinh thần tình nguyện đến khắp mọi nơi."
                    TextWrapping="Wrap" />

                <!--  Separator  -->
                <Rectangle
                    Height="1"
                    Margin="20,580,20,0"
                    VerticalAlignment="Top"
                    Fill="#FF042354" />

                <!--  Like section  -->
                <StackPanel
                    Margin="50,600,0,0"
                    VerticalAlignment="Top"
                    Orientation="Horizontal">
                    <Button
                        Padding="15,5"
                        Background="#FF042354"
                        BorderThickness="0"
                        Content="Thích"
                        FontWeight="Bold"
                        Foreground="White">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="5" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Foreground="#FF042354"
                        Text="42" />

                    <!--  Bình luận  -->
                    <TextBlock
                        Margin="750,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"
                        Text="1 Bình luận" />
                </StackPanel>

                <!--  Comment section  -->
                <StackPanel Margin="50,650,50,0" VerticalAlignment="Top">
                    <!--  Comment 1  -->
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!--  Avatar  -->
                        <Border
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Background="#E6E6E6"
                            CornerRadius="20" />

                        <!--  Comment content  -->
                        <Border
                            Grid.Column="1"
                            Margin="10,0,00,0"
                            Padding="15,10"
                            Background="#EAF6FF"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    Margin="0,0,0,5"
                                    FontWeight="SemiBold"
                                    Foreground="#FF042354"
                                    Text="Đỗ Quang Trung" />
                                <TextBlock Margin="0,0,0,5" Text="Cmt đầu" />
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock
                                        Cursor="Hand"
                                        Foreground="#0E4C92"
                                        Text="Thích" />
                                    <TextBlock
                                        Margin="15,0,0,0"
                                        Cursor="Hand"
                                        Foreground="#0E4C92"
                                        Text="Phản hồi" />
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!--  Options  -->
                        <StackPanel
                            Grid.Column="2"
                            Margin="10,0,0,0"
                            Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Top"
                                Cursor="Hand"
                                FontSize="20"
                                FontWeight="Bold"
                                Text="..." />

                            <!--  Dropdown menu  -->
                            <Border
                                Margin="15,0,0,0"
                                Padding="10,5"
                                Background="#EAF6FF"
                                CornerRadius="8">
                                <StackPanel>
                                    <TextBlock Margin="0,0,0,5" Text="Xoá" />
                                    <TextBlock Margin="0,0,0,5" Text="Ẩn bình luận" />
                                    <TextBlock Text="Báo cáo" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!--  Comment input  -->
                    <Grid Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--  Avatar  -->
                        <Border
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Background="#E6E6E6"
                            CornerRadius="20" />

                        <!--  Input field  -->
                        <Border
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            Padding="15,10"
                            Background="#EAF6FF"
                            CornerRadius="8">
                            <TextBlock
                                VerticalAlignment="Center"
                                Foreground="#6c757d"
                                Text="Bình luận dưới tên..." />
                        </Border>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>