<Window
    x:Class="DoanKhoaClient.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:DoanKhoaClient.ViewModels"
    xmlns:converters="clr-namespace:DoanKhoaClient.Converters"
    Title="Register"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    MinWidth="1024"
    MinHeight="768"
    mc:Ignorable="d">

    <Window.Resources>
        <vm:RegisterViewModel x:Key="ViewModel"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>

        <!-- Thêm Style cho các phần tử form -->
        <Style x:Key="FormElementStyle"
               TargetType="{x:Type FrameworkElement}">
            <Setter Property="Opacity"
                    Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="20"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                To="1"
                                Duration="0:0:0.4"
                                BeginTime="0:0:0.1">
                                <!-- Đã xóa DoubleAnimation.BeginTime sai và thay bằng thuộc tính BeginTime trực tiếp -->
                            </DoubleAnimation>
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                To="0"
                                Duration="0:0:0.4"
                                BeginTime="0:0:0.1">
                                <!-- Đã xóa DoubleAnimation.BeginTime sai và thay bằng thuộc tính BeginTime trực tiếp -->
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <StaticResource ResourceKey="ViewModel"/>
    </Window.DataContext>
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation
                        Storyboard.TargetName="Register_Background"
                        Storyboard.TargetProperty="Opacity"
                        From="0"
                        To="1"
                        Duration="0:0:0.5"/>
                    <ThicknessAnimation
                        Storyboard.TargetName="Register_Background"
                        Storyboard.TargetProperty="Margin"
                        From="0,30,0,0"
                        To="0,0,0,0"
                        Duration="0:0:0.5">
                        <ThicknessAnimation.EasingFunction>
                            <QuadraticEase EasingMode="EaseOut"/>
                        </ThicknessAnimation.EasingFunction>
                    </ThicknessAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Grid x:Name="Register_Background"
          Opacity="0">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0"
                                 EndPoint="0.5,1">
                <GradientStop Offset="0.67"
                              Color="#FFF6FCFF"/>
                <GradientStop Offset="1"
                              Color="#FFDBF3FF"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--  Grid chính để căn giữa nội dung  -->
        <Viewbox Stretch="Uniform"
                 MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                 MaxWidth="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}">
            <Grid Width="1440"
                  Height="1024">
                <!-- Your original RegisterView content here -->
                <Grid HorizontalAlignment="Center"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <!--  Form đăng ký  -->
                    <Border
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="527"
                        Margin="25,10,0,119"
                        Padding="20"
                        HorizontalAlignment="Left"
                        CornerRadius="100">
                        <StackPanel Margin="-10,-10,-10,-20"
                                    VerticalAlignment="Center">
                            <!--  Tên đăng nhập  -->
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF042354"
                                Text="Tên đăng nhập:"/>
                            <TextBlock Text="{Binding UsernameError}"
                                       Foreground="Red"
                                       FontSize="12"
                                       Margin="10,0,0,5"
                                       Visibility="{Binding UsernameError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <TextBox
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>

                                <TextBlock
                                    Margin="20,5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Nhập tên đăng nhập"
                                    Visibility="{Binding UsernamePlaceholderVisibility}"/>
                            </Grid>
                            <!--  Họ và tên  -->
                            <TextBlock
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF042354"
                                Text="Họ và tên:"/>
                            <TextBlock Text="{Binding FullNameError}"
                                       Foreground="Red"
                                       FontSize="12"
                                       Margin="10,0,0,5"
                                       Visibility="{Binding FullNameError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <TextBox
                                        x:Name="UsernameTextBox"
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>

                                <TextBlock
                                    x:Name="UsernamePlaceholder"
                                    Margin="20,5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Nhập tên"
                                    Visibility="{Binding FullNamePlaceholderVisibility}"/>
                            </Grid>

                            <!--  Email  -->
                            <TextBlock
                                Margin="0,10,0,0"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF042354"
                                Text="Email:"/>
                            <TextBlock Text="{Binding EmailError}"
                                       Foreground="Red"
                                       FontSize="12"
                                       Margin="10,0,0,5"
                                       Visibility="{Binding EmailError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <TextBox
                                        x:Name="EmailTextBox"
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16"
                                        Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                                </Border>

                                <TextBlock
                                    x:Name="EmailPlaceholder"
                                    Margin="20,5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Nhập email"
                                    Visibility="{Binding EmailPlaceholderVisibility}"/>

                            </Grid>

                            <!--  Mật khẩu  -->
                            <TextBlock
                                Margin="0,10,0,0"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF042354"
                                Text="Mật khẩu:"/>
                            <TextBlock Text="{Binding PasswordError}"
                                       Foreground="Red"
                                       FontSize="12"
                                       Margin="10,0,0,5"
                                       Visibility="{Binding PasswordError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <PasswordBox
                                        x:Name="PasswordBox"
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PasswordChanged">
                                                <i:InvokeCommandAction Command="{Binding PasswordChangedCommand}"
                                                                       CommandParameter="{Binding ElementName=PasswordBox}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </PasswordBox>
                                </Border>

                                <TextBlock
                                    x:Name="PasswordPlaceholder"
                                    Margin="20,5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Nhập mật khẩu"
                                    Visibility="{Binding PasswordPlaceholderVisibility}"/>
                            </Grid>

                            <!--  Mật khẩu xác nhận  -->
                            <TextBlock
                                Margin="0,10,0,0"
                                FontSize="16"
                                FontWeight="Bold"
                                Foreground="#FF042354"
                                Text="Xác nhận mật khẩu:"/>
                            <TextBlock Text="{Binding ConfirmPasswordError}"
                                       Foreground="Red"
                                       FontSize="12"
                                       Margin="10,0,0,5"
                                       Visibility="{Binding ConfirmPasswordError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <PasswordBox
                                        x:Name="ConfirmPasswordBox"
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PasswordChanged">
                                                <i:InvokeCommandAction Command="{Binding ConfirmPasswordChangedCommand}"
                                                                       CommandParameter="{Binding ElementName=ConfirmPasswordBox}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </PasswordBox>
                                </Border>

                                <TextBlock
                                    x:Name="ConfirmPasswordPlaceholder"
                                    Margin="20,5"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Foreground="Gray"
                                    IsHitTestVisible="False"
                                    Text="Xác nhận mật khẩu"
                                    Visibility="{Binding ConfirmPasswordPlaceholderVisibility}"/>
                            </Grid>

                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}">
                                <CheckBox
                                    Content="Đăng ký với quyền Admin"
                                    IsChecked="{Binding IsAdmin}"
                                    Foreground="#FF042354"
                                    FontSize="14"/>
                            </Grid>
                            <Grid Margin="5,10,5,10"
                                  Style="{StaticResource FormElementStyle}"
                                  Visibility="{Binding ShowAdminCode, Converter={StaticResource BoolToVis}}">
                                <TextBlock
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="#FF042354"
                                    Text="Mã xác thực Admin:"/>
                                <TextBlock
                                    Text="{Binding AdminCodeError}"
                                    Foreground="Red"
                                    FontSize="12"
                                    Margin="10,25,0,5"
                                    Visibility="{Binding AdminCodeError, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                                <Border
                                    Background="#FFFFFFFF"
                                    BorderBrush="#FFCBCDD2"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Border.Triggers>
                                        <EventTrigger RoutedEvent="TextBoxBase.GotFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#597CA2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="TextBoxBase.LostFocus">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ColorAnimation
                                                        Storyboard.TargetProperty="BorderBrush.(SolidColorBrush.Color)"
                                                        To="#FFCBCDD2"
                                                        Duration="0:0:0.2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Border.Triggers>
                                    <PasswordBox
                                        x:Name="AdminCodeBox"
                                        Height="35"
                                        Margin="15,5"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        FontSize="16">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="PasswordChanged">
                                                <i:InvokeCommandAction Command="{Binding AdminCodeChangedCommand}"
                                                                       CommandParameter="{Binding ElementName=AdminCodeBox}"/>
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </PasswordBox>
                                </Border>
                            </Grid>
                            <!-- Error Message -->
                            <TextBlock
                                Foreground="Red"
                                Margin="5,10,5,10"
                                Text="{Binding ErrorMessage}"
                                TextWrapping="Wrap"
                                Visibility="{Binding HasError, Converter={StaticResource BoolToVis}}"/>

                            <!--  Nút đăng ký  -->
                            <Border
                                Margin="5,25,5,10"
                                Background="#FF042354"
                                BorderBrush="#FFCBCDD2"
                                BorderThickness="1"
                                CornerRadius="8">
                                <Button
                                    Command="{Binding RegisterCommand}"
                                    Height="46"
                                    BorderThickness="0"
                                    Content="Đăng ký"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Foreground="White">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}">
                                            <Setter Property="Background"
                                                    Value="#FF042354"/>
                                            <Setter Property="Cursor"
                                                    Value="Hand"/>
                                            <Setter Property="RenderTransformOrigin"
                                                    Value="0.5,0.5"/>
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1"
                                                                    ScaleY="1"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type Button}">
                                                        <Border
                                                            x:Name="ButtonBorder"
                                                            Background="{TemplateBinding Background}"
                                                            CornerRadius="8">
                                                            <ContentPresenter HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <EventTrigger RoutedEvent="MouseEnter">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetName="ButtonBorder"
                                                                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                                            To="#FF1A3C78"
                                                                            Duration="0:0:0.2"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                            To="1.05"
                                                                            Duration="0:0:0.2"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                            To="1.05"
                                                                            Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="MouseLeave">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetName="ButtonBorder"
                                                                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                                            To="#FF042354"
                                                                            Duration="0:0:0.2"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                            To="1"
                                                                            Duration="0:0:0.2"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                            To="1"
                                                                            Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                                                <BeginStoryboard>
                                                                    <Storyboard>
                                                                        <ColorAnimation
                                                                            Storyboard.TargetName="ButtonBorder"
                                                                            Storyboard.TargetProperty="Background.(SolidColorBrush.Color)"
                                                                            To="#FF0A1D4A"
                                                                            Duration="0:0:0.1"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                            To="0.95"
                                                                            Duration="0:0:0.1"/>
                                                                        <DoubleAnimation
                                                                            Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                            To="0.95"
                                                                            Duration="0:0:0.1"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </EventTrigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Border>

                            <!--  Điều kiện đăng ký  -->
                            <TextBlock
                                Margin="2,0,2,20"
                                HorizontalAlignment="Center"
                                FontSize="14"
                                Foreground="#FF042354"
                                TextWrapping="Wrap">
                        Bằng cách đăng ký tài khoản, bạn cũng đồng thời chấp nhận mọi&#x00A0;<Run FontWeight="Bold">
                            điều kiện về quy định và chính sách của Đoàn khoa Mạng máy tính và Truyền thông.
                        </Run>
                            </TextBlock>



                            <!--  Đã có tài khoản? Đăng nhập  -->
                            <Grid Margin="10,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    HorizontalAlignment="Center"
                                    Cursor="Hand"
                                    FontSize="16"
                                    FontStyle="Italic"
                                    Foreground="#FF042354"
                                    Text="Đã có tài khoản? Đăng nhập">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="RenderTransform">
                                                <Setter.Value>
                                                    <ScaleTransform ScaleX="1"
                                                                    ScaleY="1"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="RenderTransformOrigin"
                                                    Value="0.5,0.5"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver"
                                                         Value="True">
                                                    <Setter Property="TextDecorations"
                                                            Value="Underline"/>
                                                    <Setter Property="Foreground"
                                                            Value="#FF1A3C78"/>
                                                    <Trigger.EnterActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                    To="1.05"
                                                                    Duration="0:0:0.1"/>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                    To="1.05"
                                                                    Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.EnterActions>
                                                    <Trigger.ExitActions>
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                    To="1"
                                                                    Duration="0:0:0.1"/>
                                                                <DoubleAnimation
                                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                    To="1"
                                                                    Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </Trigger.ExitActions>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="MouseDown">
            <i:InvokeCommandAction Command="{Binding NavigateToLoginCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
                                </TextBlock>
                            </Grid>

                        </StackPanel>
                    </Border>

