                Width="980"
                Height="2"
                Margin="387,293,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
                Stroke="#FF042354">
                <Rectangle.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform Angle="0" />
                        <TranslateTransform />
                    </TransformGroup>
                </Rectangle.RenderTransform>
            </Rectangle>

            <!--  Action Buttons  -->
            <Button
                x:Name="AddMemberButton"
                Width="147"
                Height="40"
                Margin="397,219,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF042354"
                Command="{Binding AddUserCommand}"
                Content="Thêm thành viên"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#F6FCFF" />

            <Button
                x:Name="RefreshButton"
                Width="147"
                Height="40"
                Margin="562,219,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#FF466CA7"
                Command="{Binding RefreshCommand}"
                Content="Làm mới"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#F6FCFF" />

            <!--  Batch Action Buttons  -->
            <Button
                x:Name="BatchEditButton"
                Width="147"
                Height="40"
                Margin="725,219,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#3498db"
                Command="{Binding BatchEditCommand}"
                Content="Sửa hàng loạt"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White" />

            <Button
                x:Name="BatchDeleteButton"
                Width="147"
                Height="40"
                Margin="884,219,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#e74c3c"
                Command="{Binding BatchDeleteCommand}"
                Content="Xóa hàng loạt"
                FontSize="16"
                FontWeight="Bold"
                Foreground="White" />
            <!--  Filter Dropdown  -->
            <ComboBox
                Width="147"
                Height="40"
                Margin="1044,219,0,0"
                DisplayMemberPath="DisplayName"
                FontSize="17"
                FontWeight="Bold"
                Foreground="#FF042354"
                ItemsSource="{Binding Roles}"
                SelectedItem="{Binding SelectedRole}"
                Style="{StaticResource FilterComboBoxStyle}" />

            <!--  Member List  -->
            <!--  Member List Cải Tiến  -->
            <ListView
                x:Name="MembersListView"
                Margin="386,334,69,70"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                ItemsSource="{Binding FilteredUsers}"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedUser}">
                <ListView.Resources>
                    <!--  Style cho các button thao tác  -->
                    <Style x:Key="ActionButtonStyle" TargetType="Button">
                        <Setter Property="Margin" Value="0,0,0,0" />
                        <Setter Property="Padding" Value="10,5" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Cursor" Value="Hand" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        Padding="{TemplateBinding Padding}"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="4">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.Resources>

                <ListView.View>
                    <GridView>
                        <!--  Checkbox chọn nhiều  -->
                        <GridViewColumn Width="40">
                            <GridViewColumn.Header>
                                <CheckBox IsChecked="{Binding DataContext.IsAllSelected, RelativeSource={RelativeSource AncestorType=ListView}, Mode=TwoWay}" Style="{StaticResource CustomCheckBoxStyle}" />
                            </GridViewColumn.Header>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" Style="{StaticResource CustomCheckBoxStyle}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <!--  Avatar/Hình đại diện  -->
                        <GridViewColumn Width="60">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Width="40"
                                        Height="40"
                                        Background="#EEEEEE"
                                        CornerRadius="20">
                                        <Image Source="/Views/Images/generic avatar.png" Stretch="UniformToFill" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="TÊN ĐĂNG NHẬP">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontWeight="SemiBold"
                                        Text="{Binding Username}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="180" Header="HỌ TÊN">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center" Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="200" Header="EMAIL">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        VerticalAlignment="Center"
                                        Text="{Binding Email}"
                                        TextTrimming="CharacterEllipsis"
                                        ToolTip="{Binding Email}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="75" Header="VAI TRÒ">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border
                                        Padding="8,3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Background="#F0F7FF"
                                        CornerRadius="4">
                                        <TextBlock
                                            VerticalAlignment="Center"
                                            FontWeight="Medium"
                                            Foreground="#042354"
                                            Text="{Binding Role, Converter={StaticResource RoleToTextConverter}}" />
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="80" Header="TRẠNG THÁI">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                        <Ellipse
                                            Width="10"
                                            Height="10"
                                            Margin="0,0,8,0">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Fill" Value="#4CAF50" />
                                                    <!--  Green for online  -->
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                            <Setter Property="Fill" Value="#9E9E9E" />
                                                            <!--  Gray for offline  -->
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <TextBlock VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="Online" />
                                                    <Setter Property="Foreground" Value="#4CAF50" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsOnline}" Value="False">
                                                            <Setter Property="Text" Value="Offline" />
                                                            <Setter Property="Foreground" Value="#9E9E9E" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="110" Header="SỐ HOẠT ĐỘNG">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Text="{Binding ActivitiesCount}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                        <GridViewColumn Width="280" Header="THAO TÁC">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                        <Button
                                            Width="50"
                                            Height="29"
                                            Margin="0,0,20,0"
                                            Background="#2196F3"
                                            Command="{Binding DataContext.EditUserCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                            CommandParameter="{Binding}"
                                            Content="Sửa"
                                            Foreground="White"
                                            Style="{StaticResource ActionButtonStyle}" />

                                        <Button
                                            Width="50"
                                            Height="29"
                                            Margin="0,0,20,0"
                                            Background="#F44336"
                                            Command="{Binding DataContext.DeleteUserCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                            CommandParameter="{Binding}"
                                            Content="Xóa"
                                            Foreground="White"
                                            Style="{StaticResource ActionButtonStyle}" />

                                        <Button
                                            Width="63"
                                            Height="29"
                                            Background="#FF042354"
                                            Command="{Binding DataContext.ViewUserDetailsCommand, RelativeSource={RelativeSource AncestorType={x:Type ListView}}}"
                                            CommandParameter="{Binding}"
                                            Content="Chi tiết"
                                            Foreground="White"
                                            Style="{StaticResource ActionButtonStyle}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>

                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Padding" Value="12,10" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#EEEEEE" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F5F9FF" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#E3F2FD" />
                                <Setter Property="BorderBrush" Value="#BBDEFB" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>
        </Grid>
    </Grid>
</Window>