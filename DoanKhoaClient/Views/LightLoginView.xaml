<Window
    x:Class="DoanKhoaClient.Views.LightLoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:DoanKhoaClient.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LightLoginView"
    Width="1440"
    Height="1024"
    mc:Ignorable="d">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0.67" Color="#FFF6FCFF" />
                <GradientStop Offset="1" Color="#FFDBF3FF" />
            </LinearGradientBrush>
        </Grid.Background>
        <!--  Grid chính để căn giữa nội dung  -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="35*" />
                <RowDefinition Height="279*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <!--  Form đăng nhập  -->
            <Border
                Grid.Row="1"
                Grid.Column="0"
                Width="527"
                Height="491"
                Margin="0,121,0,226"
                Padding="20"
                CornerRadius="100">
                <StackPanel Margin="-10,-10,-10,-20" VerticalAlignment="Center">
                    <TextBlock
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#FF042354"
                        Text="Họ và tên:" />
                    <Grid Margin="5,10,5,10">
                        <Border
                            Background="#FFFFFFFF"
                            BorderBrush="#FFCBCDD2"
                            BorderThickness="1"
                            CornerRadius="8">
                            <TextBox
                                x:Name="UsernameTextBox"
                                Height="35"
                                Margin="15,5"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16" />
                        </Border>
                        <!--  Placeholder text  -->
                        <TextBlock
                            x:Name="UsernamePlaceholder"
                            Margin="20,5"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Nhập tên" />
                    </Grid>
                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#FF042354"
                        Text="Mật khẩu:" />
                    <Grid Margin="5,10,5,10">
                        <Border
                            Background="White"
                            BorderBrush="#FFCBCDD2"
                            BorderThickness="1"
                            CornerRadius="8">
                            <PasswordBox
                                x:Name="PasswordBox"
                                Height="35"
                                Margin="15,5"
                                VerticalContentAlignment="Center"
                                Background="Transparent"
                                BorderThickness="0"
                                FontSize="16" />
                        </Border>
                        <!--  Placeholder Text  -->
                        <TextBlock
                            x:Name="PasswordPlaceholder"
                            Margin="20,5"
                            VerticalAlignment="Center"
                            FontSize="16"
                            Foreground="Gray"
                            IsHitTestVisible="False"
                            Text="Nhập mật khẩu" />
                    </Grid>
                    <Border
                        Margin="0,25,0,25"
                        Background="#FF042354"
                        BorderBrush="#FFCBCDD2"
                        BorderThickness="1"
                        CornerRadius="8">
                        <Button
                            Height="46"
                            BorderThickness="0"
                            Content="Đăng nhập"
                            FontSize="16"
                            FontWeight="Bold"
                            Foreground="White">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type Button}">
                                                <Border
                                                    x:Name="ButtonBorder"
                                                    Background="{TemplateBinding Background}"
                                                    CornerRadius="8">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <!--  Hiệu ứng hover  -->
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#FF1A3C78" />
                                                        <Setter Property="Foreground" Value="#FFFFD700" />
                                                    </Trigger>
                                                    <!--  Hiệu ứng khi nhấn  -->
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter TargetName="ButtonBorder" Property="Background" Value="#FF0A1D4A" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Border>
                    <!--  Quên mật khẩu? - Đăng ký  -->
                    <Grid Margin="10,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            FontSize="16"
                            FontStyle="Italic"
                            Foreground="#FF042354"
                            Text="Quên mật khẩu?" />
                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Cursor="Hand"
                            FontSize="16"
                            FontStyle="Italic"
                            Foreground="#FF042354"
                            Text="Đăng ký" />
                    </Grid>
                </StackPanel>
            </Border>
            <!--  Hình ảnh và Logo  -->
            <Border
                Grid.RowSpan="2"
                Grid.Column="1"
                Width="836"
                Height="942"
                Margin="20,0,0,0"
                CornerRadius="40">
                <Grid>
                    <!--  Hình ảnh nền  -->
                    <Image
                        x:Name="HeroImage"
                        Width="836"
                        Height="942"
                        RenderOptions.BitmapScalingMode="HighQuality"
                        Source="\Views\Images\Hero.png"
                        Stretch="UniformToFill" />
                    <!--  Logo  -->
                    <Image
                        x:Name="Fulllogo"
                        Width="272"
                        Height="71"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="/Views/Images/Fulllogo.png"
                        Stretch="Fill">

                        <Image.Effect>
                            <DropShadowEffect
                                BlurRadius="3"
                                Opacity="0.5"
                                ShadowDepth="2"
                                Color="#66000000" />
                        </Image.Effect>
                    </Image>
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Window>
