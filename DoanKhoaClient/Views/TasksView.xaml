                    VerticalAlignment="Top"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="EventTeam_Click"
                    Cursor="Hand">
                    <Border
                        Width="940"
                        Height="130"
                        Style="{StaticResource TeamCardStyle}">
                        <Grid Margin="25">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Team Icon  -->
                            <Border
                                Grid.Column="0"
                                Width="80"
