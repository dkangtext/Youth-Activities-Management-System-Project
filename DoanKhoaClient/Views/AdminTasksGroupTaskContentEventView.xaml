<Window x:Class="DoanKhoaClient.Views.AdminTasksGroupTaskContentEventView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chi tiết công việc sự kiện"
        Height="600"
        Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="Admin_GroupTask_Event_Background">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Background="#3498db"
              Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal"
                        Margin="15,0,0,0">
                <Button Background="Transparent"
                        BorderThickness="0"
                        Margin="0,0,10,0"
                        Click="BackButton_Click">
                    <Image Source="/Images/back_icon.png"
                           Width="24"
                           Height="24"/>
                </Button>
                <TextBlock Text="{Binding Program.Name}"
                           VerticalAlignment="Center"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="White"/>
            </StackPanel>

            <Image x:Name="ThemeToggleButton"
                   Grid.Column="2"
                   Source="/Images/theme_toggle.png"
                   Width="24"
                   Height="24"
                   Margin="0,0,20,0"
                   MouseDown="ThemeToggleButton_MouseDown"/>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1"
              Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Commands -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Tạo mới"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Command="{Binding CreateTaskItemCommand}"/>
                    <Button Content="Chỉnh sửa"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Command="{Binding EditTaskItemCommand}"
                            CommandParameter="{Binding SelectedTaskItem}"/>
                    <Button Content="Xoá"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Command="{Binding DeleteTaskItemCommand}"
                            CommandParameter="{Binding SelectedTaskItem}"/>
                    <Button Content="Hoàn thành"
                            Width="100"
                            Height="30"
                            Command="{Binding CompleteTaskItemCommand}"
                            CommandParameter="{Binding SelectedTaskItem}"/>
                    <Button Content="📧 Nhắc nhở"
                            Width="100"
                            Height="30"
                            Margin="0,0,10,0"
                            Command="{Binding SendReminderCommand}"
                            CommandParameter="{Binding SelectedTaskItem}"
                            Background="#ff6b35"
                            Foreground="White"
                            FontWeight="Bold"
                            ToolTip="Gửi email nhắc nhở cho người được assign"/>
                    <!-- ✅ THÊM: Nút test email -->
                    <Button Content="🧪 Test Email"
                            Width="100"
                            Height="30"
                            Command="{Binding TestEmailCommand}"
                            Background="#17a2b8"
                            Foreground="White"
                            FontWeight="Bold"
                            ToolTip="Mở cửa sổ test email"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Làm mới"
                        Width="100"
                        Height="30"
                        Command="{Binding RefreshCommand}"/>
            </Grid>

            <!-- Tasks List -->
            <ListView Grid.Row="1"
                    ItemsSource="{Binding TaskItems}"
                    SelectedItem="{Binding SelectedTaskItem}"
                      BorderThickness="1"
                    BorderBrush="#DDDDDD">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Tiêu đề"
                                DisplayMemberBinding="{Binding Title}"
                                Width="180"/>
                        <GridViewColumn Header="Mô tả"
                                DisplayMemberBinding="{Binding Description}"
                                Width="200"/>
                        <GridViewColumn Header="Người thực hiện"
                                DisplayMemberBinding="{Binding AssignedToName}"
                                Width="120"/>
                        <!-- ✅ THÊM: Cột Email -->
                        <GridViewColumn Header="Email"
                                Width="150">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding AssignedToEmail}"
                                            Foreground="#666"
                                               ToolTip="{Binding AssignedToEmail}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Hạn chót"
                                DisplayMemberBinding="{Binding DueDate, StringFormat=dd/MM/yyyy}"
                                Width="100"/>
                        <GridViewColumn Header="Trạng thái"
                                Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}"
                                                            Value="Pending">
                                                        <Setter Property="Text"
                                                                Value="Đang chờ"/>
                                                        <Setter Property="Foreground"
                                                                Value="#f39c12"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                            Value="InProgress">
                                                        <Setter Property="Text"
                                                                Value="Đang thực hiện"/>
                                                        <Setter Property="Foreground"
                                                                Value="#3498db"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                            Value="Completed">
                                                        <Setter Property="Text"
                                                                Value="Hoàn thành"/>
                                                        <Setter Property="Foreground"
                                                                Value="#2ecc71"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}"
                                                            Value="Canceled">
                                                        <Setter Property="Text"
                                                                Value="Hủy"/>
                                                        <Setter Property="Foreground"
                                                                Value="#e74c3c"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <!-- ✅ THÊM: Cột Thao tác -->
                        <GridViewColumn Header="Thao tác"
                                Width="80">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="📧"
                                            Width="30"
                                            Height="25"
                                            Command="{Binding DataContext.SendReminderCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Background="#ff6b35"
                                            Foreground="White"
                                            BorderThickness="0"
                                            ToolTip="Gửi nhắc nhở ngay"
                                            Margin="2"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Loading Indicator -->
            <Grid Grid.Row="1"
                  Background="#80FFFFFF"
                  Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibility}}">
                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                    <TextBlock Text="Đang tải..."
                               FontSize="16"
                               HorizontalAlignment="Center"/>
                    <ProgressBar IsIndeterminate="True"
                                 Width="200"
                                 Height="10"
                                 Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>