<Window x:Class="DoanKhoaClient.Views.ImageViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Xem Ảnh"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="Black"
        KeyDown="Window_KeyDown">

    <Grid>
        <ScrollViewer x:Name="ImageScrollViewer"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      CanContentScroll="True"
                      PanningMode="Both">

            <ScrollViewer.LayoutTransform>
                <ScaleTransform x:Name="ZoomTransform"
                        ScaleX="1"
                        ScaleY="1"/>
            </ScrollViewer.LayoutTransform>

            <Image x:Name="ImageDisplay"
                   Stretch="Uniform"
                   MouseWheel="Image_MouseWheel"
                   MouseLeftButtonDown="Image_MouseLeftButtonDown"
                   MouseMove="Image_MouseMove"
                   MouseLeftButtonUp="Image_MouseLeftButtonUp"/>
        </ScrollViewer>

        <!-- Control buttons -->
        <StackPanel HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Orientation="Horizontal"
                    Margin="20"
                    Background="#CC000000"
                    Opacity="0.9">

            <Button Content="Zoom In"
                    Click="ZoomInButton_Click"
                    Margin="5"
                    Padding="15,8"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="Zoom Out"
                    Click="ZoomOutButton_Click"
                    Margin="5"
                    Padding="15,8"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="Fit to Window"
                    Click="FitToWindowButton_Click"
                    Margin="5"
                    Padding="15,8"
                    Background="White"
                    Foreground="Black"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="Tải xuống"
                    Click="DownloadButton_Click"
                    Margin="5"
                    Padding="15,8"
                    Background="#4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <Button Content="Đóng"
                    Click="CloseButton_Click"
                    Margin="5"
                    Padding="15,8"
                    Background="#f44336"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- Zoom level indicator -->
        <TextBlock x:Name="ZoomLevelText"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Margin="20"
                   Text="100%"
                   Foreground="White"
                   FontSize="16"
                   Background="#CC000000"
                   Padding="10,5"/>
    </Grid>
</Window>