                VerticalAlignment="Top"
                Source="/Views/Images/instagram.png" />
            <Image
                x:Name="GroupTask_Study_iYoutube"
                Width="24"
                Height="24"
                Margin="215,926,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Views/Images/youtube.png" />
            <Button
                Width="120"
                Height="36"
                Margin="387,143,0,845"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Content="Quay lại"
                Style="{StaticResource SortButtonStyle}">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>
            <!--  HEADER VÀ DIVIDER - GIỮ NGUYÊN  -->
            <Label
                x:Name="GroupTask_Study_lbInformationTeam"
                Width="545"
                Height="40"
                Margin="384,205,0,0"
                Padding="0,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                Content="BAN HỌC TẬP"
                FontSize="32"
                FontWeight="Bold"
                Foreground="#042354" />
            <Rectangle
                Width="978"
                Height="1"
                Margin="387,308,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                RenderTransformOrigin="0.5,0.5"
