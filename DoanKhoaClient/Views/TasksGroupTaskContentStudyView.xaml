                Style="{StaticResource ActionButtonStyle}" />

            <!--  Page Info  -->
            <Label
                x:Name="PageInfoLabel"
                Height="35"
                Margin="0,930,0,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                VerticalContentAlignment="Center"
                Content="Trang 1 / 1"
                FontSize="16"
                Foreground="#042354" />
        </Grid>
    </Grid>
</Window>