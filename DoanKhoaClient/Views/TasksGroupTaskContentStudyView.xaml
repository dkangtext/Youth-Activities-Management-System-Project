                Style="{StaticResource ActionButtonStyle}"
                Visibility="Collapsed" />

            <Button
                x:Name="NextPageButton"
                Width="120"
                Height="35"
                Margin="0,0,75,57"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="NextPageButton_Click"
