                        FontSize="20"
                        FontWeight="Bold" />
                </StackPanel>
            </Button>

            <!--  Admin submenu  -->
            <StackPanel
                x:Name="AdminSubmenu"
                Margin="132,621,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Visibility="Collapsed">
                <Button
                    x:Name="AdminTaskButton"
                    Margin="0,5,0,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="AdminTaskButton_Click"
                    Cursor="Hand">
                    <TextBlock
                        FontSize="15"
                        Foreground="#042354"
                        Text="Quản lý công việc" />
                </Button>
                <Button
                    x:Name="AdminMembersButton"
                    Margin="0,5,0,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="AdminMembersButton_Click"
                    Cursor="Hand">
                    <TextBlock
                        FontSize="15"
                        Foreground="#042354"
                        Text="Quản lý thành viên" />
                </Button>

                <Button
                    x:Name="AdminActivitiesButton"
                    Margin="0,5,0,5"
                    Background="Transparent"
                    BorderThickness="0"
                    Click="AdminActivitiesButton_Click"
                    Cursor="Hand">
                    <TextBlock
                        FontSize="15"
                        Foreground="#042354"
                        Text="Quản lý hoạt động" />
