                <!--  Nút mở dropdown  -->
                <!--  Dropdown filter  -->
                <Popup
                    IsOpen="{Binding IsFilterDropdownOpen, Mode=TwoWay}"
                    Placement="Bottom"
                    PlacementTarget="{Binding ElementName=FilterDropdownButton}"
                    StaysOpen="False">
                    <Popup.Resources>
                        <Storyboard x:Key="PopupFadeIn">
                            <DoubleAnimation
                                Storyboard.TargetProperty="Opacity"
                                From="0"
                                To="1"
                                Duration="0:0:0.2"/>
                        </Storyboard>
                    </Popup.Resources>
                    <Border
                        Padding="16"
                        Background="#E6F0FA"
                        BorderBrush="#CCC"
