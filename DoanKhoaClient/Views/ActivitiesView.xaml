                Text="CỦA TUỔI TRẺ MẠNG MÁY TÍNH VÀ TRUYỀN THÔNG"/>

            <!--  Featured Activities Cards  -->
            <StackPanel
                Margin="370,230,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <ItemsControl x:Name="FeaturedActivitiesCarousel"
                              ItemsSource="{Binding FeaturedActivities}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Width="190"
                                        Margin="0,0,20,0">
                                <Border
                                    Width="{Binding Width}"
                                    Height="{Binding Height}"
                                    HorizontalAlignment="Center"
                                    Background="#e6e6e6"
                                    CornerRadius="8">
                                    <Grid>
                                        <Image Source="{Binding ImgUrl}"
                                               Stretch="UniformToFill">
                                            <Image.RenderTransform>
                                                <TranslateTransform X="0"/>
                                            </Image.RenderTransform>
                                        </Image>
                                    </Grid>
                                </Border>
                                <TextBlock
                                    Width="190"
                                    Margin="0,8,0,0"
                                    HorizontalAlignment="Center"
                                    FontSize="17"
                                    FontWeight="Bold"
                                    Foreground="#FF12305E"
                                    Text="{Binding Title}"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap">
                                    <TextBlock.RenderTransform>
                                        <TranslateTransform X="0"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </StackPanel>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsActive}"
                                             Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1"
                                                    Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsActive}"
                                             Value="False">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1"
                                                    Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!--  Pagination Dots  -->
            <StackPanel
                Margin="650,485,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <ItemsControl ItemsSource="{Binding PaginationDots}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Ellipse
                                Width="10"
                                Height="10"
                                Margin="0,0,5,0"
                                Fill="{Binding Color}">
                                <Ellipse.RenderTransform>
                                    <ScaleTransform x:Name="DotScale"
                                                    ScaleX="1"
                                                    ScaleY="1"/>
                                </Ellipse.RenderTransform>
                            </Ellipse>
                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsActive}"
                                             Value="True">
                                    <DataTrigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="DotScale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1.2"
                                                    Duration="0:0:0.3"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="DotScale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1.2"
                                                    Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.EnterActions>
                                    <DataTrigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="DotScale"
                                                    Storyboard.TargetProperty="ScaleX"
                                                    To="1"
                                                    Duration="0:0:0.3"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetName="DotScale"
                                                    Storyboard.TargetProperty="ScaleY"
                                                    To="1"
                                                    Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </DataTrigger.ExitActions>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!--  Latest News Section  -->
            <Border
                Width="370"
                Margin="0,160,42,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                BorderBrush="{x:Null}"
                CornerRadius="10,10,10,10">
                <StackPanel Margin="15">
                    <TextBlock
                        Margin="0,0,0,20"
                        Padding="0,8"
                        Background="#FF12305E"
                        FontSize="20"
                        FontWeight="Bold"
                        Foreground="#FFFFFF"
                        Text="TIN TỨC MỚI NHẤT"
                        TextAlignment="Center"/>

                    <ItemsControl ItemsSource="{Binding LatestActivities}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ActivityButtonStyle}">
                                    <StackPanel Margin="10,15,0,15">
                                        <TextBlock
                                            FontSize="15"
                                            FontWeight="Bold"
                                            Foreground="#FF12305E"
                                            Text="{Binding Title}"
                                            TextWrapping="Wrap"/>
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontSize="13"
                                            Foreground="#6c757d"
                                            Text="{Binding Date, StringFormat='{}{0:dddd • dd/MM/yyyy}'}"/>
                                    </StackPanel>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!--  Filter Buttons  -->
            <StackPanel
                Margin="370,520,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Orientation="Horizontal">
                <Button
                    x:Name="sortByButton"
                    Width="248"
                    Height="50"
                    Click="sortByButton_Click"
                    Content="Sắp xếp theo"
                    Style="{StaticResource CustomButtonStyle}"/>
            </StackPanel>
            <Popup
                x:Name="SortFilterPopup"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=sortByButton}"
                StaysOpen="False">
                <Border
                    Width="300"
                    Padding="16"
                    Background="#E6F0FA"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    CornerRadius="5">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,8"
                            FontSize="16"
                            FontWeight="Bold"
                            Text="Sắp xếp theo thời gian"/>

                        <StackPanel
                            Margin="0,8,0,8"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                            <TextBox
                                x:Name="SortAmountTextBox"
                                Width="60"
                                Margin="0,0,8,0"
                                Text="1"/>
                            <ComboBox
                                x:Name="SortTypeComboBox"
                                Width="120"
                                SelectedIndex="0">
                                <ComboBoxItem Content="Ngày"/>
                                <ComboBoxItem Content="Tháng"/>
                                <ComboBoxItem Content="Năm"/>
                            </ComboBox>
                        </StackPanel>

                        <Button
                            x:Name="ApplySortButton"
                            Margin="0,8,0,0"
                            Click="ApplySortButton_Click"
                            Content="Áp dụng"/>
                        <Button
                            x:Name="ClearSortButton"
                            Margin="0,8,0,0"
                            Background="#FF597CA2"
                            Click="ClearSortButton_Click"
                            Content="Bỏ sắp xếp"
                            Foreground="White"/>
                    </StackPanel>
                </Border>
            </Popup>
            <Border
                Width="1028"
                Height="400"
                Margin="370,372,0,40"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Background="#FFDBF3FF"
                BorderBrush="Black"
                CornerRadius="10,10,10,10"/>
            <!--  Bộ lọc hoạt động  -->
            <!--  Activities List  -->
            <Border Margin="370,580,42,60"
                    Padding="10,10,10,10"
                    CornerRadius="10">
                <ScrollViewer Padding="15,25"
                              VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding Activities, UpdateSourceTrigger=PropertyChanged}"
                                  x:Name="ActivityItemsControl">
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Opacity"
                                        Value="0"/>
                                <Setter Property="RenderTransform">
                                    <Setter.Value>
                                        <TranslateTransform Y="50"/>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <EventTrigger RoutedEvent="Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="Opacity"
                                                    To="1"
                                                    Duration="0:0:0.5"/>
                                                <DoubleAnimation
                                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                                                    To="0"
                                                    Duration="0:0:0.5">
                                                    <DoubleAnimation.EasingFunction>
                                                        <CubicEase EasingMode="EaseOut"/>
                                                    </DoubleAnimation.EasingFunction>
                                                </DoubleAnimation>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Style.Triggers>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Style="{StaticResource ActivityButtonStyle}">
                                    <Button.Effect>
                                        <DropShadowEffect BlurRadius="10"
                                                          ShadowDepth="1"
                                                          Direction="270"
                                                          Opacity="0.1"
                                                          Color="#000000"/>
                                    </Button.Effect>
                                    <Button.RenderTransform>
                                        <ScaleTransform ScaleX="1"
                                                        ScaleY="1"/>
                                    </Button.RenderTransform>
                                    <Button.Triggers>
                                        <EventTrigger RoutedEvent="MouseEnter">
                                            <BeginStoryboard Storyboard="{StaticResource CardHoverStoryboard}"/>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="MouseLeave">
                                            <BeginStoryboard Storyboard="{StaticResource CardLeaveStoryboard}"/>
                                        </EventTrigger>
                                    </Button.Triggers>
                                    <Grid Margin="0,15,0,15">
                                        <!-- Nội dung hiện tại -->
                                    </Grid>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
        </Grid>
    </Viewbox>
</Window>