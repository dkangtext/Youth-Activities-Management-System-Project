                Width="307"
                Height="50"
                Margin="370,41,0,0"
                Padding="15,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                Background="#FFDBF3FF"
                BorderBrush="{x:Null}"
                FontSize="17"
                KeyDown="Activities_tbSearch_KeyDown"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            <Popup
                IsOpen="{Binding IsSearchResultOpen, Mode=TwoWay}"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=Activities_tbSearch}"
                StaysOpen="False">
                <Border
                    Width="{Binding ElementName=Activities_tbSearch, Path=ActualWidth}"
                    Background="#FFEDF9FF"
                    BorderThickness="1"
                    CornerRadius="5">
                    <ListBox
                        MaxHeight="200"
                        Background="White"
                        BorderThickness="0"
                        ItemsSource="{Binding FilteredActivities}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Command="{Binding DataContext.OpenActivityDetailCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding}"
                                    Content="{Binding Title}"
                                    Padding="10"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Foreground="#12305E"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Margin="0,4,0,4"
                                    HorizontalContentAlignment="Left"
                                    Height="44"
                                    MinWidth="220"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </Popup>
