                                                <Border ClipToBounds="True" CornerRadius="8">
                                                    <Image
                                                        Source="{Binding ImgUrl}"
                                                        Stretch="UniformToFill"
                                                        Style="{StaticResource FadeInImageStyle}">
                                                        <Image.RenderTransform>
                                                            <TranslateTransform X="0" />
                                                        </Image.RenderTransform>
                                                    </Image>
                                                </Border>
                                            </Grid>
                                        </Border>
                                        <TextBlock
                                            Width="190"
                                            Margin="0,8,0,0"
                                            HorizontalAlignment="Center"
                                            FontSize="17"
                                            FontWeight="Bold"
                                            Foreground="#FF12305E"
                                            Style="{StaticResource ActivitiesContentStyle}"
                                            Text="{Binding Title}"
                                            TextAlignment="Center"
                                            TextWrapping="Wrap">
                                            <TextBlock.RenderTransform>
                                                <TranslateTransform X="0" />
                                            </TextBlock.RenderTransform>
                                        </TextBlock>
                                    </StackPanel>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsActive}" Value="True">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1"
                                                            Duration="0:0:0.4" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsActive}" Value="False">
                                            <DataTrigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation
                                                            Storyboard.TargetProperty="Opacity"
                                                            To="1"
                                                            Duration="0:0:0.4" />
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </DataTrigger.EnterActions>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
