                Width="24"
                Height="24"
                Margin="215,926,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Source="/Views/Images/youtube.png"/>


            <!--  Main Content Area  -->
            <TextBlock
                Margin="370,120,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                FontWeight="Bold"
                Foreground="#FF12305E"
                Text="CÁC HOẠT ĐỘNG NỔI BẬT"/>

            <TextBlock
                Margin="370,165,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="20"
